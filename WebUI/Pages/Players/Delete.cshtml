@page
@model WebUI.Pages.Players.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Player</h1>
<alert view-context="ViewContext"></alert>
<alert-danger dismissable="false">Are you sure you want to delete this player?</alert-danger>

<div>
    <div class="form-group">
        <label asp-for="Input.Name"></label>
        <span class="form-control">@Model.Input.Name</span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Level"></label>
        <span class="form-control">@Model.Input.Level</span>
    </div>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Page("./Index")" class="btn btn-light">Cancel</a>
    </form>
</div>